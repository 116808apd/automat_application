<Window x:Class="AutomatApp.Windows.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomatApp.Windows"
        mc:Ignorable="d"
        Title="Dialog" Height="300" Width="300" MinWidth="200" MinHeight="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Name="MainContent" DockPanel.Dock="Top"  Grid.Row="0" Grid.ColumnSpan="2"/>
        <Button Click="Button_Click" Margin="20" Grid.Row="1" Grid.Column="1">Cancel</Button>
    </Grid>
</Window>
