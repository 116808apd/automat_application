<UserControl x:Class="AutomatApp.UserControls.OpenOneFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomatApp.UserControls"
             xmlns:matFn="clr-namespace:AutomatApp.MatFunctions"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Border BorderBrush="Black" BorderThickness="2">
        <StackPanel>
            <Label Name="MatInfo"/>
            <Label>Do you wish to retrieve the files?</Label>
            <Button Height="30" Width="100"> Cancel</Button>
        </StackPanel>
    </Border>
</UserControl>
